{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "pretty": true,
    "sourceMap": true,
    "target": "es6",
    "outDir": "./dist",
    "baseUrl": "./src",
    "experimentalDecorators": true,
    "paths": {
      "@models/*": [
        "app/models/*"
      ],
      "@controllers/*": [
        "app/controllers/*"
      ],
      "@validations/*": [
        "app/validations/*"
      ],
      "@config/*": [
        "config/*"
      ],
      "@utils/*": [
        "app/utils/*"
      ],
      "@middlewares/*": [
        "app/middlewares/*"
      ]
    }
  },
  "include": [
    "src/**/*",
    "__tests__/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}